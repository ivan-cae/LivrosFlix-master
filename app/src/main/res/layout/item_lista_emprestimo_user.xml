<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@drawable/custom_ripple">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/bordas"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/item_lista_user_devolucao"
            android:layout_width="95dp"
            android:layout_height="45dp"
            android:textAlignment="center"
            android:textColor="@color/primaryTextColor"
            android:textSize="16sp"
            android:textStyle="normal"
            app:layout_constraintStart_toEndOf="@+id/item_lista_user_emprestimo"
            app:layout_constraintTop_toTopOf="@+id/item_lista_user_emprestimo" />

        <TextView
            android:id="@+id/item_lista_user_emprestimo"
            android:layout_width="95dp"
            android:layout_height="45dp"
            android:textAlignment="center"
            android:textColor="@color/primaryTextColor"
            android:textSize="16sp"
            android:textStyle="normal"
            app:layout_constraintStart_toEndOf="@+id/item_lista_user_nome"
            app:layout_constraintTop_toTopOf="@+id/item_lista_user_nome" />

        <TextView
            android:id="@+id/item_lista_user_status"
            android:layout_width="153dp"
            android:layout_height="45dp"
            android:textAlignment="center"
            android:textColor="@color/primaryTextColor"
            android:textSize="16sp"
            android:textStyle="normal"
            app:layout_constraintStart_toEndOf="@+id/item_lista_user_devolucao"
            app:layout_constraintTop_toTopOf="@+id/item_lista_user_emprestimo" />

        <TextView
            android:id="@+id/item_lista_user_nome"
            android:layout_width="240dp"
            android:layout_height="45dp"
            android:layout_marginTop="8dp"
            android:textAlignment="center"
            android:textColor="@color/primaryTextColor"
            android:textSize="16sp"
            android:textStyle="normal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

